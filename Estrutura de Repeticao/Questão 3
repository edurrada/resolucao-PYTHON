#Faça um programa que leia e valide as seguintes informações:
#Nome: maior que 3 caracteres;
#Idade: entre 0 e 150;
#Salário: maior que zero;
#Sexo: 'f' ou 'm';
#Estado Civil: 's', 'c', 'v', 'd';

nome=input("Informe seu nome: ")
while len(nome)<=3:
    nome=input("Informe um nome com mais de 3 caracteres: ")
    
idade=int(input("\nInforme sua idade: "))
while idade<0 or idade>150:
    idade=int(input("Informe uma idade válida: "))
    
salario=float(input("\nInforme seu salario: "))
while salario<0:
    salario=float(input("\nInforme um salario acima de 0: "))
    
ec=input("\nInforme seu estado civil: ")
while ec!='s' and ec!='c' and ec!='v' and ec!='d':
    ec=input("\nInforme um estado civil válido (s, c, v ou d): ")
